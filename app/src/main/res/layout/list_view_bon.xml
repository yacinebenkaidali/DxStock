<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:background="@drawable/card_background"
        android:focusable="false"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4">

        <TextView
            android:id="@+id/nom_client_fin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom du client :"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="italic"
            android:autoText="false" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Code du Bon "
                android:textColor="#1a237e"
                android:textSize="20sp"
                android:id="@+id/textView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20sp"
                android:id="@+id/code_bon_fin" />

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout4"
            android:layout_toRightOf="@+id/cbarticle"
            android:layout_toEndOf="@+id/cbarticle">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Montant :"
                android:layout_marginRight="5dp"
                android:id="@+id/textView3"
                android:layout_below="@+id/linearLayout4"
                android:layout_alignLeft="@+id/linearLayout4"
                android:layout_alignStart="@+id/linearLayout4"
                android:textColor="#000" />
            <TextView
                android:id="@+id/motant_fin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prix"
                android:textColor="#37474f"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout4"
            android:layout_alignLeft="@+id/linearLayout4"
            android:layout_alignStart="@+id/linearLayout4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Date :"
                android:id="@+id/hide"
                android:layout_marginRight="5dp"
                android:textColor="#DF0000"
                android:layout_below="@+id/linearLayout2"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/date_liv_fin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textColor="#DF0000"
                android:textSize="14sp" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>