<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:background="@drawable/card_background"
        android:focusable="false"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/linearLayout2"
        android:layout_toStartOf="@+id/linearLayout2"
        android:id="@+id/linearLayout4">

    <TextView
        android:id="@+id/desi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Designation :"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="italic" />

<LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout4"
            android:layout_toRightOf="@+id/cbarticle"
            android:layout_toEndOf="@+id/cbarticle">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Prix :"
        android:layout_marginRight="5dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignLeft="@+id/linearLayout4"
        android:layout_alignStart="@+id/linearLayout4"
        android:textColor="#304ffe" />
    <TextView
        android:id="@+id/prix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prix"
        android:textColor="#304ffe"
        android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout4"
            android:layout_alignLeft="@+id/linearLayout4"
            android:layout_alignStart="@+id/linearLayout4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="QuantitÃ© disponible :"
                android:id="@+id/hide"
                android:layout_marginRight="5dp"
                android:textColor="#DF0000"
                android:layout_below="@+id/linearLayout2"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/qte_disp_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Poids"
                android:textColor="#DF0000"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/edit"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:id="@+id/linearLayout2">

        <EditText
            android:text=""
            android:inputType="number"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:id="@+id/qte" />

    </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:id="@+id/cbarticle"
        android:layout_alignTop="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>