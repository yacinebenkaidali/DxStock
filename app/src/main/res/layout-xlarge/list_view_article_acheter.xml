<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">

    <LinearLayout
        android:background="@drawable/card_background"
        android:focusable="false"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/linearLayout2"
        android:layout_toStartOf="@+id/linearLayout2"
        android:id="@+id/linearLayout4"
        android:padding="20dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/desifin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Designation :"
            android:textColor="#000000"
            android:textSize="32sp"
            android:textStyle="italic" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout4"
            android:layout_toRightOf="@+id/cbarticle"
            android:layout_toEndOf="@+id/cbarticle">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Prix :"
                android:layout_marginRight="5dp"
                android:id="@+id/textView3"
                android:layout_below="@+id/linearLayout4"
                android:layout_alignLeft="@+id/linearLayout4"
                android:layout_alignStart="@+id/linearLayout4"
                android:textColor="#000"
                android:textSize="28sp" />
            <TextView
                android:id="@+id/prixfin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prix"
                android:textColor="#37474f"
                android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout4"
            android:layout_alignLeft="@+id/linearLayout4"
            android:layout_alignStart="@+id/linearLayout4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="QuantitÃ© Disponible :"
                android:id="@+id/hide"
                android:layout_marginRight="5dp"
                android:textColor="#DF0000"
                android:layout_below="@+id/linearLayout2"
                android:layout_centerHorizontal="true"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/qte_disp_fin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Poids"
                android:textColor="#DF0000"
                android:textSize="28sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:background="@drawable/card_background"
        android:orientation="horizontal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:weightSum="1"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/qtefin"
            android:textSize="26sp" />

    </LinearLayout>
</RelativeLayout>